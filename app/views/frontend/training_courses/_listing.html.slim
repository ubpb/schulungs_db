ul.training-course-listing
  - training_courses.each do |tc|
    li.training-course-item
      h5
        = tc.title
        - if tc.full?
          .badge.badge-danger =< t("frontend.training_courses.defaults.full")

      .d-flex.flex-column.align-items-stretch.flex-md-row.justify-content-md-between.align-items-md-center
        .meta
          .date
            = icon("fas", "calendar-alt", class: "fa-fw")
            =< l(tc.date)
            span.badge.badge-info =< distance_of_time_in_words_to_now(tc.date, scope: "datetime.distance_in_words.date_only")

          .time
            = icon("far", "clock", class: "fa-fw")
            =< t("frontend.training_courses.defaults.time", time: tc.time)

          - if tc.registration_required?
            .info
              = icon("fas", "info", class: "fa-fw")
              =< t("frontend.training_courses.defaults.registration_required")

          - if tc.target_audiences.present?
            .target-audiences.mt-1(style="margin-left: 1.45em")
              = icon("fas", "bullseye", class: "fa-fw", style: "margin-left: -1.45em")
              - tc.target_audiences.each do |ta|
                .badge.badge-light =< ta.title

          - if tc.categories.present?
            .categories.mt-1.mt-1(style="margin-left: 1.45em")
              = icon("fas", "tags", class: "fa-fw", style: "margin-left: -1.45em")
              - tc.categories.each do |c|
                .badge.badge-light =< c.title

        .actions.mt-2.mt-md-0
          = link_to frontend_training_course_path(tc), class: "btn btn-primary btn-block" do
            = t(".details")
